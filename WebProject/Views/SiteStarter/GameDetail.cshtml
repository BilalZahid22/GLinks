@model CRUD.game
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>GamePortal</title>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" media="all" />
    <!--[if IE 6]><link rel="stylesheet" href="css/ie6-style.css" type="text/css" media="all" /><![endif]-->
    <script src="~/Content/jquery-1.3.2.min.js" type="text/javascript"></script>
    <script src="~/Content/fns.js" type="text/javascript"></script>
    <script type="text/javascript">
        function MM_swapImgRestore() { //v3.0
            var i, x, a = document.MM_sr;
            for (i = 0; a && i < a.length && (x = a[i]) && x.oSrc; i++)
                x.src = x.oSrc;
        }
        function MM_preloadImages() { //v3.0
            var d = document;
            if (d.images) {
                if (!d.MM_p)
                    d.MM_p = new Array();
                var i, j = d.MM_p.length, a = MM_preloadImages.arguments;
                for (i = 0; i < a.length; i++)
                    if (a[i].indexOf("#") != 0) {
                        d.MM_p[j] = new Image;
                        d.MM_p[j++].src = a[i];
                    }
            }
        }

        function MM_findObj(n, d) { //v4.01
            var p, i, x;
            if (!d)
                d = document;
            if ((p = n.indexOf("?")) > 0 && parent.frames.length) {
                d = parent.frames[n.substring(p + 1)].document;
                n = n.substring(0, p);
            }
            if (!(x = d[n]) && d.all)
                x = d.all[n];
            for (i = 0; !x && i < d.forms.length; i++)
                x = d.forms[i][n];
            for (i = 0; !x && d.layers && i < d.layers.length; i++)
                x = MM_findObj(n, d.layers[i].document);
            if (!x && d.getElementById)
                x = d.getElementById(n);
            return x;
        }

        function MM_swapImage() { //v3.0
            var i, j = 0, x, a = MM_swapImage.arguments;
            document.MM_sr = new Array;
            for (i = 0; i < (a.length - 2) ; i += 3)
                if ((x = MM_findObj(a[i])) != null) {
                    document.MM_sr[j++] = x;
                    if (!x.oSrc)
                        x.oSrc = x.src;
                    x.src = a[i + 2];
                }
        }
    </script>
</head>
<body onload="MM_preloadImages('IMG_0937.JPG')">
    <!-- Page -->
    <div id="page" class="shell">
        <!-- Header -->
        @{Html.RenderPartial("header"); }


        <!-- / Header -->
        <!-- Main -->
        <div id="main">
            <div id="main-bot">
                <div class="cl">&nbsp;</div>
                <!-- Content -->
                <div id="content">
                    <div class="block">
                        <div class="block-bot">
                            <div class="head">
                                <div class="head-cnt">
                                    <h2 style="color:black">@Model.G_name</h2>
                                    <div class="cl">&nbsp;</div>
                                </div>
                            </div>
                            <div Style="padding-left: 10px ">
                                <h3></h3>
                            </div>
                            <div class="container">

                                <ul class="nav nav-pills">
                                    <li class="active"><a data-toggle="pill" href="#home">ScreenShots</a></li>
                                    <li><a data-toggle="pill" href="#menu">Description</a></li>
                                    <li><a data-toggle="pill" href="#menu1">System Requirements</a></li>
                                    <li><a data-toggle="pill" href="#menu2">Gameplay Video</a></li>
                                    <li><a data-toggle="pill" href="#menu3">Installation Video</a></li>
                                </ul>

                                <div class="tab-content" style="padding-right: 600px">
                                    <div id="home" class="tab-pane fade in active">
                                        @foreach (CRUD.Image x in Model.Images)
                                        {
                                            <img src="@Url.Content(x.images)" alt="" width="600" height="300" />
                                        }
                                    </div>
                                    <div id="menu" class="tab-pane fade">
                                        <h4 style="text-align:justify;text-justify:distribute-all-lines">
                                            @Model.Description
                                        </h4>
                                    </div>
                                    <div id="menu1" class="tab-pane fade">
                                        <h4>
                                            @Model.SysReq
                                        </h4>
                                    </div>
                                    <div id="menu2" class="tab-pane fade">
                                        <video width="600" height="300" controls="controls" loop="loop">

                                            <source src="@Url.Content(Model.gamply)" type="video/mp4" />
                                            <source src="@Url.Content(Model.gamply)" type="video/webm" />
                                            Browser does Not Support This video
                                        </video>

                                    </div>

                                    <div id="menu3" class="tab-pane fade">

                                        <video width="600" height="300" controls="controls" loop="loop">
                                            <source src="@Url.Content(Model.instlV)" type="video/mp4" />
                                            <source src="@Url.Content(Model.instlV)" type="video/webm" />
                                            Browser does Not Support This video
                                        </video>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--<div style="float: right ">
                    <input type="button" class="btn" value="Download" style="margin-right: 250px ">
                            </div>-->
                    <div style="float: right ">
                        <a href="@Model.link" target="_blank" class="btn" style="margin-right: 250px ">Download</a>
                    </div>

                </div>


                <!-- / Content -->
                <!--  -->
                <div id="sidebar">

                    <div id="search" class="block">
                        <div class="block-bot">
                            <div class="block-cnt" style="margin-top: 15px">
                                <form action="~/SiteStarter/Search" method="post" style="margin-top: 5px;margin-bottom: 25px">
                                    <div class="cl">&nbsp;</div>
                                    <div class="fieldplace">
                                        <input type="text" class="field" placeholder="Search" name="Search" />
                                    </div>
                                    <input type="submit" class="button" value="GO" />

                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- / Search -->
                    <!-- Sign In -->
                    <div id="sign" class="block">
                        <div class="block-bot">
                            <div class="block-cnt">
                                <div class="cl">&nbsp;</div>

                                @if (ViewBag.UserName == null)
                                {
                                    <div class="button button-left" style="margin-left: 8px;width:100px;text-decoration-color:rosybrown">@Html.ActionLink("SignIn", "LogSign")</div>
                                    <div class="button button-right" style="width:100px">@Html.ActionLink("SignUp", "LogSign")</div>
                                }
                                else
                                {
                                    <h2>
                                        @(ViewBag.UserName)
                                    </h2>
                                    <div class="button button-left" style="margin-left: 10px;margin-top: 5px;width:100px">@Html.ActionLink("LogOut", "SignOut")</div>
                                }
                                <div class="cl">&nbsp;</div>
                                <div class="cl">&nbsp;</div>
                                <div class="cl">&nbsp;</div>

                            </div>
                        </div>
                    </div>
                    <!-- / Sign In -->
                    <div class="block">
                        <div class="block-bot">
                            <div class="head">
                                <div class="head-cnt">
                                    <h3>New Games</h3>
                                </div>
                            </div>
                            <div class="image-articles articles">
                                <div class="cl">&nbsp;</div>

                                <div class="article">
                                    <div class="cl">&nbsp;</div>
                                    <img src="@Url.Content(Model.Image)" width="200" height="150" alt="" />
                                    <div class="cnt">
                                        <h4>@Html.ActionLink(Model.G_name, "GameDetail", "SiteStarter", new { nam = Model.G_name }, null)</h4>

                                    </div>
                                    <div class="cl">&nbsp;</div>
                                </div>



                                <div class="cl">&nbsp;</div>
                                <a href="#" class="view-all">&nbsp;</a>
                                <div class="cl">&nbsp;</div>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="cl">&nbsp;</div>
                <!-- Footer -->
                @{Html.RenderPartial("footer");}
                <!-- / Footer -->
            </div>
        </div>
        <!-- / Main -->
    </div>
    <!-- / Page -->
</body>
</html>

